<?xml version="1.0" encoding="utf-8"?>
<project>
    <!-- _________________________ Application Settings _________________________ -->

    <app title="Friday Night Funkin': Psych Engine" file="PsychEngine" 
         packageName="com.shadowmario.psychengineandroid" 
         package="com.shadowmario.psychengineandroid" 
         main="Main" version="0.2.8" company="ShadowMario" />

    <!--Switch Export with Unique ApplicationID and Icon-->
    <set name="APP_ID" value="0x0100f6c013bbc000" if="switch" />

    <!-- NOTE TO SELF: DISABLE THIS IF ISSUES ARE FOUND -->
    <haxedef name="LINC_LUA_RELATIVE_DYNAMIC_LIB" if="android" /> <!-- stable luas -->

    <app preloader="flixel.system.FlxPreloader" />

    <!-- Minimum API Level for Android -->
    <set name="SWF_VERSION" value="11.8" unless="android" />
    <android target-sdk-version="33" install-location="preferExternal" if="android" />

    <!-- ____________________________ Window Settings ___________________________ -->

    <window width="1280" height="720" fps="60" background="#000000" hardware="true" vsync="true" />

    <!-- Desktop-specific -->
    <window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="true"/>

    <!-- Mobile-specific optimizations -->
    <window if="mobile" orientation="landscape" fullscreen="true" resizable="false" fps="60"/>
    
    <!-- Android-specific configurations -->
    <config:android if="android">
        <screen orientation="landscape" />
        <uses-permission name="android.permission.READ_EXTERNAL_STORAGE" />
        <uses-permission name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission name="android.permission.INTERNET" />
        <uses-feature name="android.hardware.touchscreen" required="true" />
    </config:android>

    <!-- _____________________________ Path Settings ____________________________ -->

    <set name="BUILD_DIR" value="export/debug" if="debug" />
    <set name="BUILD_DIR" value="export/release" unless="debug" />
    
    <classpath name="source" />
    
    <!-- Mobile assets handling -->
    <assets path="mobile" rename="assets/mobile" if="mobile" />
    
    <!-- PSYCH ENGINE CUSTOMIZATION -->
    <define name="MODS_ALLOWED" if="desktop || mobile" />
    <define name="LUA_ALLOWED" if="desktop || mobile" />
    <define name="ACHIEVEMENTS_ALLOWED" />
    <define name="VIDEOS_ALLOWED" if="windows || android" />
    <define name="PSYCH_WATERMARKS" /> <!-- Watermarks en pantalla de tÃ­tulo -->
    <define name="CRASH_HANDLER" if="desktop release || mobile release" />

    <!-- Assets configuration -->
    <assets path="assets/preload" rename="assets" exclude="*.ogg" if="web"/>
    <assets path="assets/preload" rename="assets" exclude="*.mp3" unless="web"/>
    
    <section if="TITLE_SCREEN_EASTER_EGG">
        <assets path="assets/secrets" rename="assets" exclude="*.ogg" if="web"/>
        <assets path="assets/secrets" rename="assets" exclude="*.mp3" unless="web"/>
    </section>

    <!-- Preloading configuration -->
    <define name="PRELOAD_ALL" unless="web" />
    <define name="NO_PRELOAD_ALL" unless="PRELOAD_ALL"/>
    
    <library name="videos" preload="true" if="VIDEOS_ALLOWED" />
    
    <!-- Dynamic libraries for assets -->
    <section if="PRELOAD_ALL">
        <library name="songs" preload="true" />
        <library name="shared" preload="true" />
        <library name="week2" preload="true" />
        <library name="week3" preload="true" />
        <library name="week4" preload="true" />
        <library name="week5" preload="true" />
        <library name="week6" preload="true" />
        <library name="week7" preload="true" />
    </section>
    
    <section if="NO_PRELOAD_ALL">
        <library name="songs" preload="false" />
        <library name="shared" preload="false" />
        <library name="week2" preload="false" />
        <library name="week3" preload="false" />
        <library name="week4" preload="false" />
        <library name="week5" preload="false" />
        <library name="week6" preload="false" />
        <library name="week7" preload="false" />
    </section>
    
    <!-- Assets paths -->
    <assets path="assets/videos" library="videos" if="VIDEOS_ALLOWED"/>
    <assets path="assets/songs" library="songs" exclude="*.ogg" if="web"/>
    <assets path="assets/songs" library="songs" exclude="*.mp3" unless="web"/>
    <!-- Repeat for other weeks similarly -->
    
    <!-- Mods support -->
    <section if="MODS_ALLOWED">
        <assets path='mods' rename='mods' embed='false'/>
        <assets path='example_mods' rename='mods/example_mods' embed='false'/>
    </section>

    <!-- Fonts and additional assets -->
    <assets path="assets/fonts" />
    <assets path='art/readme.txt' rename='do NOT readme.txt' />

    <!-- _______________________________ Libraries ______________________________ -->

    <haxelib name="flixel" />
    <haxelib name="flixel-addons" />
    <haxelib name="flixel-ui" />
    <haxelib name="hscript" />
    <define name="hscriptPos" />
    
    <!-- Lua support -->
    <haxelib name="linc_luajit" if="LUA_ALLOWED"/>
    <haxedef name="LUA_ALLOWED" if="android" />
    
    <!-- Video support -->
    <haxelib name="hxCodec" if="VIDEOS_ALLOWED"/>
    
    <!-- Debug and utilities -->
    <haxelib name="hxcpp-debug-server" if="debug"/>
    <haxelib name="discord_rpc" if="desktop"/>

    <!-- ______________________________ Haxedefines _____________________________ -->

    <!-- Performance optimizations -->
    <haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
    <haxedef name="NAPE_RELEASE_BUILD" unless="debug" />
    <haxedef name="HXCPP_GC_GENERATIONAL" if="android" />
    
    <!-- Debug configurations -->
    <haxedef name="HXC_DEBUG_TRACE" if="debug" />
    <haxedef name="FLX_NO_DEBUG" unless="debug" />
    
    <!-- Crash handler -->
    <haxedef name="HXCPP_CHECK_POINTER" if="CRASH_HANDLER" />
    <haxedef name="HXCPP_STACK_LINE" if="CRASH_HANDLER" />
    
    <!-- Android specific optimizations -->
    <haxedef name="HXCPP_ARMV7" if="android" />
    <haxedef name="HXCPP_ARM64" if="android" />
    
    <!-- _________________________________ Icons _______________________________ -->

    <icon path="art/iconOG.png" />
    <icon path="art/icon16.png" size="16"/>
    <icon path="art/icon32.png" size="32"/>
    <icon path="art/icon64.png" size="64"/>
    <icon path="art/icon128.png" size="128"/>
    <icon path="art/icon256.png" size="256"/>
    
    <!-- Android adaptive icons -->
    <icon path="art/icon-foreground.png" background="#000000" if="android" />
    
    <!-- Splash screen for Android -->
    <splash path="art/splash.png" width="1280" height="720" if="android" />
</project>
